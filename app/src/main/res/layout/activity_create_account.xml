<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".start.CreateAccountActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey there"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_below="@+id/text1"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user"
            android:textColor="@color/black"
            android:hint="Full Name"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#A3222121"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/email"
            android:textColor="@color/black"
            android:hint="Email"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#A3222121"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:inputType="textWebEmailAddress"
            />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"
            android:textColor="@color/black"
            android:hint="Phone Number"
            android:drawablePadding="10dp"
            android:drawableTint="@color/gray"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#A3222121"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="@color/gray"
            android:textColor="@color/black"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#A3222121"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/ed_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="@color/gray"
            android:textColor="@color/black"
            android:hint="Confirm Password"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#A3222121"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <CheckBox
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:drawableTint="@color/mainColor"
                android:buttonTint="@color/gray"

                />

            <TextView
                android:id="@+id/by_continui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="@string/by_continui"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="11sp"
                android:gravity="center"
                tools:ignore="RtlCompat" />



        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="Register"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_above="@+id/ll_login"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/or_text"
                android:background="@color/gray"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/or_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/or_text"
                android:background="@color/gray"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/mainColor"
            />
    </LinearLayout>

</RelativeLayout>